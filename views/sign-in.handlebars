
<!-- SIGN IN
============================== -->
<div class="sign-in-up__wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">

                <h4 class="heading sign-in-up__heading">用户登陆</h4>

                <div id="flash-messages" class="container">
                    {{#if messages.info }}
                        <div class="alert alert-info" role="alert">
                            {{ messages.info }}
                        </div>
                    {{/if}}

                    {{#if messages.success }}
                        <div class="alert alert-success" role="alert">
                            {{ messages.success }}
                        </div>
                    {{/if}}
                    {{#if messages.warning }}
                        <div class="alert alert-warning" role="alert">
                            {{ messages.warning }}
                        </div>
                    {{/if}}
                    {{#if messages.errors }}
                        <div class="alert alert-danger" role="alert">
                            {{ messages.errors }}
                        </div>
                    {{/if}}
                </div>

                <form class="form_alt sign-in-up__form" id="signinForm" role="form" action="/sign-in" method="POST">
                    <div class="form-group">
                        <label for="sign-in__username" class="sr-only">Username</label>
                        <input type="text" name="username" class="form-control" id="sign-in__username" placeholder="用户名" required>
                    </div>
                    <div class="form-group">
                        <label for="sign-in__password" class="sr-only">Password</label>
                        <input type="password" name="password" class="form-control" id="sign-in__password" placeholder="密码" required>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> 记住我的登录状态
                        </label>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary" id="sign-in__submit">登陆</button>
                </form>

                <!-- Sign Up link -->

                <div class="sign-in-up__footer">
                    忘记密码？ <a href="/forget">通过邮箱重置密码</a>
                    <br />
                    没有账号？ <a href="/sign-up">现在就去注册</a>
                </div>

            </div>
        </div>
    </div> <!-- / .container -->
</div> <!-- / .sign-in-up__wrapper -->


